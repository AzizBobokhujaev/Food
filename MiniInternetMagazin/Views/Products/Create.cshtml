@model MiniInternetMagazin.Models.GroceryStoreViewModels.Product
@{
    ViewData["Title"] = "Create";
}
<h4 class="text-info">Добавить новый продукт</h4>
<form method="post" action="~/Products/Create">
    <div class="row">
        <div class="col-md-6">
            <select name="CategoryId" class="form-control">
                @foreach (var x in ViewBag.Categories)
                {
                    <option value="@x.CategoryId">@x.CategoryName</option>
                }
            </select>
        </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <label for="ProductName">Имя продукт</label><br />
                    <input asp-for="ProductName" type="text" class="form-control" placeholder="Новый продукт" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <label for="Price">Цена</label><br />
                    <input asp-for="Price" type="number" class="form-control" placeholder="Введите цена продукта" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="submit" class="btn btn-primary" value="Добавить" />
                </div>
            </div>
        </div>
</form>